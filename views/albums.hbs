  <div class="row mt-4 ">
      <div class="col-lg-6 offset-lg-3">
          <h1>Albums</h1>
          {{#each albumsId}}
            <div class="card mt-3">
                 <img class="card-img-top" src="{{this.images.0.url}}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                        <div class="text-right">
                        <a href="/tracks/{{this.id}}" class="btn btn-primary">View tracks</a>
                    </div>
                </div>
            </div>
          {{/each}}
      </div>
  </div>    